// Checkbox.tsx
import React from 'react';
import styles from './Checkbox.module.css';

interface ICheckboxProps {
  label: string;
  checked?: boolean;
  onChange?: (checked: boolean) => void;
  disabled?: boolean;
}

export const Checkbox = ({ label, checked, onChange, disabled }: ICheckboxProps) => {
  return (
    <label className={`${styles.wrapper} ${disabled ? styles.disabled : ''}`}>
      {/* Нативний прихований інпут */}
      <input
        type="checkbox"
        className={styles.nativeInput}
        checked={checked}
        disabled={disabled}
        onChange={(e) => onChange?.(e.target.checked)}
      />
      
      {/* Кастомний бокс, який ми стилізуємо */}
      <span className={styles.customBox}>
        {checked && (
          <svg className={styles.icon} viewBox="0 0 12 10" fill="none">
            <path d="M1 5L4.5 8.5L11 1" stroke="currentColor" strokeWidth="2" strokeLinecap="round"/>
          </svg>
        )}
      </span>
      
      <span className={styles.labelText}>{label}</span>
    </label>
  );
};