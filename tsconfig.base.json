{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@wisp/*": ["packages/*/src"]
    },

    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,

    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist", "output"]
}
